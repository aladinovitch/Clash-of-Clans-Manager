<UserControl x:Class="ClashOfClansManager.Views.ViewClanWarLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClashOfClansManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <FlowDocumentScrollViewer Margin="5" BorderBrush="LightBlue" BorderThickness="3">
            <FlowDocument IsOptimalParagraphEnabled="True" IsHyphenationEnabled="True" TextAlignment="Left">
                <!--<Paragraph TextAlignment="Center">
                    <InlineUIContainer>
                        <StackPanel>
                            <Image Source="{Binding ViewModel.Clan.BadgeUrls.Medium}" Width="100"/>
                            <TextBlock Text="{Binding ViewModel.Clan.Name, StringFormat=Name : \{0\}}"/>
                            <TextBlock Text="{Binding ViewModel.ClanWarLog}"/>
                            <TextBlock Text="{Binding ViewModel.ClanWarLog.Items}"/>
                            <TextBlock Text="{Binding ViewModel.ClanWarLog.TeamSize}"/>
                            <TextBlock Text="{Binding ViewModel.ClanWarLog.StartTime}"/>
                            <TextBlock Text="{Binding ViewModel.ClanWarLog.EndTime}"/>
                            <TextBlock Text="{Binding ViewModel.ClanWarLog.PreparationStartTime}"/>
                            <TextBlock Text="{Binding ViewModel.ClanWarLog.State}"/>
                        </StackPanel>
                    </InlineUIContainer>
                </Paragraph>-->
                <Paragraph>
                    <Grid>
                        <DataGrid ItemsSource="{Binding ViewModel.ClanWarLog.Items}" AutoGenerateColumns="False" AlternatingRowBackground="PowderBlue" GridLinesVisibility="None" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Size" Binding="{Binding TeamSize}"/>
                                <DataGridTextColumn Header="Result" Binding="{Binding Result}"/>
                                <DataGridTemplateColumn Header="Clan">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel DataContext="{Binding Clan}">
                                                <Image Source="{Binding BadgeUrls.Medium}" Width="70"/>
                                                <TextBlock Text="{Binding Name}"/>
                                                <TextBlock Text="{Binding ClanLevel, StringFormat=Level: {0}}"/>
                                                <TextBlock Text="{Binding Tag}"/>
                                                <TextBlock Text="{Binding DestructionPercentage, StringFormat=Destruction: {0}%}"/>
                                                <TextBlock Text="{Binding Attacks, StringFormat=Attacks: {0}}"/>
                                                <TextBlock Text="{Binding Stars, StringFormat=Stars: {0}}"/>
                                                <TextBlock Text="{Binding ExpEarned, StringFormat=XP Earned: {0}}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Opponent">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel DataContext="{Binding Opponent}">
                                                <Image Source="{Binding BadgeUrls.Medium}" Width="70"/>
                                                <TextBlock Text="{Binding Name}"/>
                                                <TextBlock Text="{Binding ClanLevel, StringFormat=Level: {0}}"/>
                                                <TextBlock Text="{Binding Tag}"/>
                                                <TextBlock Text="{Binding DestructionPercentage, StringFormat=Destruction: {0}%}"/>
                                                <TextBlock Text="{Binding Attacks, StringFormat=Attacks: {0}}"/>
                                                <TextBlock Text="{Binding Stars, StringFormat=Stars: {0}}"/>
                                                <TextBlock Text="{Binding ExpEarned, StringFormat=XP Earned: {0}}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="End" Binding="{Binding EndTime}"/>
                                <!--<DataGridTextColumn Header="End" Binding="{Binding EndTime, StringFormat=dd/MM/yyyy}"/>-->
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Paragraph>
                <!--<Paragraph>
                    <InlineUIContainer>
                        <TextBlock Text="{Binding ViewModel.ClanWarLog}" TextWrapping="WrapWithOverflow"/>
                    </InlineUIContainer>
                </Paragraph>-->
            </FlowDocument>
        </FlowDocumentScrollViewer>
    </Grid>
</UserControl>
